doctype html
html
  head
    title= title
    
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

  body
    h1= message
    h2= error.status
    pre #{error.stack}