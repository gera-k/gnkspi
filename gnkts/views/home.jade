doctype html
html
  head
    title= title
    
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="apple-mobile-web-app-capable", content="yes")
    meta(name="viewport", content="width=device-width, height=device-height, initial-scale=1.0")

    //-    
      link(rel="stylesheet" href="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css")
      script(src="http://code.jquery.com/jquery-2.1.4.min.js")
      script(src="http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js")
    
    link(rel="stylesheet" href="/jquery/jquery.mobile-1.4.5.css")
    link(rel="stylesheet" href="/gnkts/ls-jqm.css")
    script(src="/jquery/jquery-2.1.4.js")
    script(src="/jquery/jquery.mobile-1.4.5.js")
    script(src="/gnkts/ls-jqm.js")
  
  body
    // home page
    div(data-role="page" id="home" swatchId="swatch-home")

      div(data-role="header", data-position="fixed", id="header")
        h1 Light Star 
      
      div(role="main" class="ui-content")
        
        div(data-role="popup" id="sceneSelect")
          ul(data-role="listview" id="saved-scenes")
        
        div(class="ui-grid-a outer-grid")
          div(class="ui-block-a" id="block-a")
            canvas(id="swatch-home" width=900 height=600)
              Your browser does not support HTML5 Canvas.
          div(class="ui-block-b" id="block-b")
            h3(id="curr-scene-name" style="text-align: center;") Not playing
            div(class="ui-grid-solo ui-responsive")
              div(class="ui-block-a")
                a(href="#sceneSelect" onclick="getSceneList()" data-rel="popup" class="ui-btn ui-shadow ui-corner-all ui-icon-check ui-btn-icon-left") Select Scene
            div(class="ui-grid-a ui-responsive")
              div(class="ui-block-a")
                a(onclick="editScene()" id="edit-button" class="ui-btn ui-shadow ui-corner-all ui-icon-edit ui-btn-icon-left") Edit
              div(class="ui-block-b")
                a(onclick="stopScene()" id="stop-button" class="ui-btn ui-shadow ui-corner-all ui-icon-delete ui-btn-icon-left") Stop
      //-
        div(data-role="footer", data-position="fixed")
          h3 &copy; 2015 GNK Software Toys

    // 'Pick-a-color' page
    div(data-role="page" id="color" swatchId="swatch-color")
      
      div(data-role="header", data-position="fixed", id="header")
        a(href="#home", data-ajax="true", class="ui-btn ui-icon-home ui-btn-icon-left ui-btn-inline") Home
        h1 Pick-a-color 
      
      div(role="main", class="ui-content")
        div(class="ui-grid-a outer-grid")
          div(class="ui-block-a" id="block-a")
            canvas(id="swatch-color" width=900 height=600)
              Your browser does not support HTML5 Canvas.
          div(class="ui-block-b" id="block-b")
            div(class="slider slider-red")
              label(for="slider-red-input" class="ui-hidden-accessible") R
              input(type="range" name="slider-red-input" id="red" min="0" max="255" data-highlight="true")
            div(class="slider slider-green")
              label(for="slider-green-input" class="ui-hidden-accessible") G
              input(type="range" name="slider-green-input" id="green" min="0" max="255" data-highlight="true")
            div(class="slider slider-blue")
              label(for="slider-blue-input" class="ui-hidden-accessible") B
              input(type="range" name="slider-blue-input" id="blue" min="0" max="255" data-highlight="true")
            div(class="ui-grid-a ui-responsive")
              div(class="ui-block-a")
                h3(id="value" class="centerText") #000000
              div(class="ui-block-b")
                a(href="#save-scene-dialog" class="ui-btn ui-shadow ui-corner-all ui-icon-check ui-btn-icon-left ui-btn-inline") Save
                a(href="#home" class="ui-btn ui-shadow ui-corner-all ui-icon-delete ui-btn-icon-left ui-btn-inline") Back

    // 'Save scene' dialog
    div(data-role="page" id="save-scene-dialog" data-dialog="true")
      div(data-role="header", data-position="fixed", id="header")
        h1 Save scene 
      div(role="main" class="ui-content")
        h2 Enter Scene ID
        input(type="text" name="name" id="scene-id" value="")
        div(class="ui-grid-a")
          div(class="ui-block-a")
            a(href="#home" onclick="saveScene()" class="ui-btn ui-shadow ui-corner-all ui-icon-check ui-btn-icon-left") Save
          div(class="ui-block-b")
            a(href="#home" class="ui-btn ui-shadow ui-corner-all ui-icon-delete ui-btn-icon-left") Cancel
